# PostgreSQL Configuration
POSTGRES_DB=osm
POSTGRES_USER=osm
POSTGRES_PASSWORD=osm
POSTGRES_HOST=postgis
POSTGRES_PORT=5432

# Spatial Reference System
SRID=3857

# Importer Selection (imposm or osm2pgsql)
IMPORTER=imposm

# File Paths
PBF_PATH=/data/us-latest.osm.pbf
MBTILES_PATH=/data/us-latest.mbtiles

# Bounding Box (leave blank for full extent, or specify as: min_lon,min_lat,max_lon,max_lat)
# Example USA bbox: -125,24,-66,50
BBOX=

# Service Ports
API_PORT=8080
TILESERVER_PORT=8081

# Optional: Tile Generation Settings
MIN_ZOOM=0
MAX_ZOOM=14
